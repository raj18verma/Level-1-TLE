//Problem link:- https://codeforces.com/problemset/problem/579/A

#include<bits/stdc++.h>
using namespace std;

int solve(){
       long long a,sum=0;
       cin>>a;
       while(a!=0){
              if(a%2==1)
              sum++;
              a=a/2;
       }
       cout<<sum<<endl;
       return 0;
}

int main(){
       long long t=1;
       while(t--){
              solve();
       }
       
       return 0;
       
}
